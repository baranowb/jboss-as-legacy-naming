    <properties>
        <!-- IP address defaults. -->
        <node0>127.0.0.1</node0>
        <node1>127.0.0.1</node1>
        <node2>127.0.0.1</node2>
        <mcast>230.0.0.4</mcast> <!-- Default multicast address. -->

        <!-- IP stack configs. -->
        <jvm.args.ip>-Djava.net.preferIPv4Stack=true -Djava.net.preferIPv6Addresses=false</jvm.args.ip>
        <jvm.args.ip.server>${jvm.args.ip}</jvm.args.ip.server>
        <jvm.args.ip.client>${jvm.args.ip}</jvm.args.ip.client>
        <server.jvm.args>${jvm.args.ip.server} -Dnode0=${node0} -Dnode1=${node1} -Dnode1=${node2} -Dmcast=${mcast}</server.jvm.args>


        <!-- Timeout ratios. 100 will leave the timeout as it was coded. -->
        <timeout.factor>100</timeout.factor>
        <jvm.args.timeouts>-Dts.timeout.factor=${timeout.factor}</jvm.args.timeouts>

        <!-- Common surefire properties. -->
        <surefire.memory.args>-Xmx512m -XX:MaxPermSize=256m</surefire.memory.args>
        <surefire.jpda.args />
        <as.debug.port>8787</as.debug.port>
        <surefire.system.args>${surefire.memory.args} ${surefire.jpda.args}</surefire.system.args>
        <surefire.forked.process.timeout>1500</surefire.forked.process.timeout>

        <jbossas.eap.zip><!-- To be defined --></jbossas.eap.zip>
        <jbossas.eap.distro>jboss-eap-6.3</jbossas.eap.distro>
        <hornetq.version>2.3.21.Final-redhat-1</hornetq.version>
        <version.org.jboss.naming>5.0.3.GA_CP02</version.org.jboss.naming>
        <version.org.jboss.remote-naming>1.0.7.Final-redhat-1</version.org.jboss.remote-naming>
    </properties>

    <build>
        <plugins>
            <plugin>
               <groupId>org.apache.felix</groupId>
               <artifactId>maven-bundle-plugin</artifactId>
               <inherited>true</inherited>
               <extensions>true</extensions>
           </plugin>
            <plugin>
                <artifactId>maven-compiler-plugin</artifactId>
                <version>3.1</version>
                <configuration>
                    <source>1.6</source>
                    <target>1.6</target>
                </configuration>
            </plugin>
            
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-surefire-plugin</artifactId>
                <configuration>
                    <!--<redirectTestOutputToFile>true</redirectTestOutputToFile>
                    <enableAssertions>true</enableAssertions>-->
                    <argLine>${server.jvm.args} -Dts.timeout.factor=100 -XX:MaxPermSize=128m</argLine>
                    <!-- Parameters to test cases. -->
                    <systemPropertyVariables combine.children="append">
                        <arquillian.launch>ha-jnp</arquillian.launch>
                        <server.jvm.args>${server.jvm.args}</server.jvm.args>
                        <node0>${node0}</node0>
                        <node1>${node1}</node1>
                        <node2>${node2}</node2>
                        <mcast>230.0.0.4</mcast>
                    </systemPropertyVariables>
                </configuration>
            </plugin>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-antrun-plugin</artifactId>
                <version>1.6</version>
                <executions>
                    <execution>
                        <id>prepare</id>
                        <phase>validate</phase>
                        <configuration>
                            <target>
                                <taskdef resource="net/sf/antcontrib/antcontrib.properties" classpathref="maven.plugin.classpath" />
                                <if>
                                    <available file="target/runtime" />
                                    <then>
                                        <echo message="Runtime already configured. Invoke mvn clean to have them reconfigured." />
                                    </then>
                                    <else>
                                        <echo message="Unpacking target runtimes." />
                                        <unzip src="${jbossas.eap.zip}" dest="target/runtime" />
                                        <rename src="target/runtime/${jbossas.eap.distro}" dest="target/runtime/jboss-eap"/>
                                        <unzip src="${project.basedir}/../legacy-jnp-extension-${project.version}.zip" dest="target/runtime/jboss-eap" />
                                        <chmod dir="target/runtime/jboss-eap" perm="ugo+rx" includes="**/*.sh" />

                                        <echo message="Enabling JNP for EAP6." />
                                        <xslt destdir="target/runtime/jboss-eap/standalone/configuration" style="src/test/resources/xslt/enableJNP.xsl" extension="-jnp.xml.mod" useImplicitFileset="false">
                                            <fileset dir="target/runtime/jboss-eap/standalone/configuration">
                                                <include name="**/standalone-full.xml" />
                                            </fileset>
                                        </xslt>
                                        <!--
                                        <xslt destdir="target/runtime/jboss-eap/standalone/configuration" style="src/test/resources/xslt/enableHAJNP-backup.xsl" extension="-jnp-backup.xml.mod" useImplicitFileset="false">
                                            <fileset dir="target/runtime/jboss-eap/standalone/configuration">
                                                <include name="**/standalone-full-ha.xml" />
                                            </fileset>
                                        </xslt>
                                        <xslt destdir="target/runtime/jboss-eap/standalone/configuration" style="src/test/resources/xslt/enableHAJNP.xsl" extension="-jnp.xml.mod" useImplicitFileset="false">
                                            <fileset dir="target/runtime/jboss-eap/standalone/configuration">
                                                <include name="**/standalone-full-ha.xml" />
                                            </fileset>
                                        </xslt>
                                        -->
                                        <move todir="target/runtime/jboss-eap/standalone/configuration">
                                            <fileset dir="target/runtime/jboss-eap/standalone/configuration">
                                                <include name="**/standalone-full-jnp.xml.mod" />
                                                <!--
                                                <include name="**/standalone-full-ha-jnp.xml.mod" />
                                                <include name="**/standalone-full-ha-jnp-backup.xml.mod" />
                                                -->
                                            </fileset>
                                            <mapper type="glob" from="*.mod" to="*" />
                                        </move>
                                        <copy file="src/test/resources/config/application-roles.properties" todir="target/runtime/jboss-eap/standalone/configuration" overwrite="true" verbose="true" />
                                        <copy file="src/test/resources/config/application-users.properties" todir="target/runtime/jboss-eap/standalone/configuration" overwrite="true" verbose="true" />
                                    </else>
                                </if>
                            </target>
                        </configuration>
                        <goals>
                            <goal>run</goal>
                        </goals>
                    </execution>
                </executions>
                <dependencies>
                    <dependency>
                        <groupId>ant-contrib</groupId>
                        <artifactId>ant-contrib</artifactId>
                        <version>20020829</version>
                    </dependency>
                </dependencies>
            </plugin>
        </plugins>
    </build>



